@*@model IEnumerable<BTL_ConGa.Models.DanhMuc>*@
@using BTL_ConGa.Models;
@{
    ViewData["Title"] = "DanhMucMonAn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@*@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<DanhMuc>*@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<DanhMuc>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Danh mục món ăn</h5>
            <p>
                <a class="btn btn-primary" asp-action="ThemDanhMuc">Tạo danh mục</a>
            </p>
        </div>
        <p>@TempData["Message"]</p>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                           <table class="table table-bordered dataTable" id="dataTable"
                                   width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info"
                                   style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th style="width:40%;">
                                           Mã danh mục
                                        </th>
                                        <th style="width: 40%;">
                                           @* @Html.DisplayNameFor(model => model.TenDanhMuc)*@
                                           Tên danh mục
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model) {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaDanhMuc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenDanhMuc)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="SuaDanhMuc" asp-route-maDanhMuc="@item.MaDanhMuc">Chỉnh sửa</a> |
                                                <a class="btn btn-primary" asp-action="XoaDanhMuc" asp-route-maDanhMuc="@item.MaDanhMuc">Xóa</a>
                                            </td>
                                        </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*@Html.PagedListPager(Model, page=>Url.Action("DanhMucMonAn", new{page=page}),
                    new X.PagedList.Web.Common.PagedListRenderOptions(){LiElementClasses = new List<String> {"page-item"},
                    PageClasses = new List<String> {"page-link"}})*@
                </div>
            </div>
        </div>
    </div>
</div>





