@*@model IEnumerable<BTL_ConGa.Models.KhachHang>*@
@using BTL_ConGa.Models;
@{
    ViewData["Title"] = "KhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    BtlWebContext db = new BtlWebContext();
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<KhachHang>*@
@model List<KhachHang>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Khách hàng</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable"
                                   width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info"
                                   style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã khách hàng
                                        </th>
                                        <th>
                                            Tên khách hàng
                                        </th>
                                        <th>
                                            Ngày sinh
                                        </th>
                                        <th>
                                            Số điện thoại
                                        </th>
                                        <th>
                                            Địa chỉ
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Giới tính
                                        </th>
                                        <th>
                                            Tài khoản
                                        </th>
                                        <th>
                                            Mật khẩu
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdkhachHang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenKhachHang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgaySinh)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoDienThoai)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiaChi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GioiTinh)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TaiKhoan)
                                            </td>
                                            <td>
                                                @{
                                                    var KhachHang = db.TaiKhoans.Find(item.TaiKhoan);
                                                }
                                                @KhachHang.MatKhau
                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*@Html.PagedListPager(Model, page=>Url.Action("KhachHang", new{page=page}),
                    new X.PagedList.Web.Common.PagedListRenderOptions(){LiElementClasses = new List<String> {"page-item"},
                    PageClasses = new List<String> {"page-link"}})*@
                </div>
            </div>
        </div>
    </div>
</div>
