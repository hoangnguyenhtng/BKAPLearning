@*@model IEnumerable<BTL_ConGa.Models.NhanVien>*@
@using BTL_ConGa.Models;
@{
    ViewData["Title"] = "NhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    BtlWebContext db = new BtlWebContext();
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<NhanVien>*@
@model List<NhanVien>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Nhân viên</h5>
            <p>
                <a class="btn btn-primary" asp-action="ThemNhanVienMoi">Thêm nhân viên</a>
            </p>
        </div>
        <p>@TempData["Message"]</p>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable"
                                   width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info"
                                   style="width: 100%;">
                                    <thead>
                                    <tr>
                                        <th>
                                            Mã nhân viên
                                        </th>
                                        <th>
                                           Tên nhân viên
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.DiaChi)*@
                                            Địa chỉ
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.NgaySinh)*@
                                            Ngày sinh
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.Email)*@
                                            Email
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.SoDienThoai)*@
                                            Số điện thoại
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.GioiTinh)*@
                                            Giới tính
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.TaiKhoanNavigation)*@
                                            Tài khoản
                                        </th>
                                        <th>
                                            @*@Html.DisplayNameFor(model => model.TaiKhoanNavigation)*@
                                            Mật khẩu
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaNhanVien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenNhanVien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgaySinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoDienThoai)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GioiTinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TaiKhoan)
                                        </td>
                                        <td>
                                            @{
                                                var NhanVien = db.TaiKhoans.Find(item.TaiKhoan);
                                            }
                                                @NhanVien.MatKhau
                                        </td>

                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-action="SuaNhanVien" asp-route-maNhanVien="@item.MaNhanVien" style="margin-bottom:1%">Chỉnh sửa</a>
                                            <a class="btn btn-primary" asp-action="XoaNhanVien" asp-route-maNhanVien="@item.MaNhanVien">Xóa</a>
                                           
                                        </td>
                                    </tr>
                            }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*@Html.PagedListPager(Model, page=>Url.Action("NhanVien", new{page=page}),
                    new X.PagedList.Web.Common.PagedListRenderOptions(){LiElementClasses = new List<String> {"page-item"},
                    PageClasses = new List<String> {"page-link"}})*@
                </div>
            </div>
        </div>
    </div>
</div>

