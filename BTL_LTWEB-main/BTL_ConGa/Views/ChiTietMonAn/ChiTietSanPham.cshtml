@*@model BTL_ConGa.Models.MonAn*@
@inject IHttpContextAccessor HttpContextAccessor
<!-- Start Top Search -->
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
        </div>
    </div>
</div>
<!-- End Top Search -->
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var item in ViewBag.monAn)
                {
                    <h2>@item.TenMonAn</h2>
                }

                <ul class="breadcrumb">
                    @foreach (var item in ViewBag.sanPham)
                    {
                        <li class="breadcrumb-item"><a href="#">@item.TenDanhMuc</a></li>
                    }
                    @foreach (var item in ViewBag.monAn)
                    {
                        <li class="breadcrumb-item active">@item.TenMonAn</li>
                    }
                </ul>

            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @foreach (var image in ViewBag.monAn)
                        {
                            <div class="carousel-item active"> <img class="d-block w-100" src="@Url.Content("../Chicken/images/ThucDon/"+image.AnhDaiDien)" alt="First slide"> </div>
                        }
                        @foreach (var image in ViewBag.sanPham)
                        {
                            <div class="carousel-item"> <img class="d-block w-100" style="width: 340px; height: 276px" src="@Url.Content("../Chicken/images/ThucDon/"+image.HinhAnh)" alt="Second slide"> </div>
                            @*                        <div class="carousel-item"> <img class="d-block w-100" src="../Chicken/images/ThucDon/ComBo/ComBoBurger.png" alt=""> </div>
                        *@                        }
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        @foreach (var image in ViewBag.monAn)
                        {
                            <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="@Url.Content("../Chicken/images/ThucDon/"+image.AnhDaiDien)" alt="" />
                            </li>
                        }
                        @foreach (var image in ViewBag.sanPham)
                        {
                            <li data-target="#carousel-example-1" data-slide-to="">
                                <img class="d-block w-100 img-fluid" src="@Url.Content("../Chicken/images/ThucDon/"+image.HinhAnh)" alt="" />
                            </li>
                        }
                        @*<li data-target="#carousel-example-1" data-slide-to="1">
                        <img class="d-block w-100 img-fluid" src="../Chicken/images/ThucDon/ComBo/ComBoBurger.png" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="2">
                        <img class="d-block w-100 img-fluid" src="../Chicken/images/ThucDon/ComBo/ComBoBurger.png" alt="" />
                        </li>*@

                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    @foreach (var item in ViewBag.monAn)
                    {
                        <h2>@item.TenMonAn</h2>
                        <h5>@item.DonGia <del id="Gia-Cu">@item.DonGia</del></h5>
                        <p class="available-stock"><span> Có sẵn / <a href="#">Đã bán 10</a></span></p>
                        <h4>Mô tả:</h4>
                        <p>
                            @item.MoTa
                        </p>
                    }
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">Số lượng</label>
                                <input id="SoLuong" class="form-control" value="1" min="1" max="20" type="number">
                            </div>
                        </li>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">Mua mới</a>
                            @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                            {
                                <a class="btn hvr-hover" data-fancybox-close="" onclick="AddToCart('@ViewBag.checkHD','@ViewBag.maHDB','@ViewBag.maMonAn','@ViewBag.maKH')">Thêm vào giỏ hàng</a>
                            }
                            else
                            {
                                <a class="btn hvr-hover" data-fancybox-close="" href="#">Thêm vào giỏ hàng</a>
                            }

                        </div>
                    </div>

                    <div class="add-to-btn">
                        <div class="add-comp">
                            <a class="btn hvr-hover" href="#"><i class="fas fa-heart"></i> Thêm vào danh sách yêu thích</a>
                            <a class="btn hvr-hover" href="#"><i class="fas fa-sync-alt"></i> Thêm vào so sánh</a>
                        </div>
                        <div class="share-bar">
                            <a class="btn hvr-hover" href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-pinterest-p" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="card card-outline-secondary my-4">
                <div class="card-header">
                    <h2>Đánh giá sản phẩm</h2>
                </div>
                <div class="card-body">
                    <div class="media mb-3">
                        <div class="mr-2">
                            <img class="rounded-circle border p-1" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2264%22%20height%3D%2264%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2064%2064%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_160c142c97c%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A10pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_160c142c97c%22%3E%3Crect%20width%3D%2264%22%20height%3D%2264%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2213.5546875%22%20y%3D%2236.5%22%3E64x64%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="Generic placeholder image">
                        </div>
                        <div class="media-body">
                            <p>Yêu thích gà rán</p>
                            <small class="text-muted">Đăng bởi Conchocolong vào ngày 3/1/18</small>
                        </div>
                    </div>
                    <hr>
                    <div class="media mb-3">
                        <div class="mr-2">
                            <img class="rounded-circle border p-1" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2264%22%20height%3D%2264%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2064%2064%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_160c142c97c%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A10pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_160c142c97c%22%3E%3Crect%20width%3D%2264%22%20height%3D%2264%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2213.5546875%22%20y%3D%2236.5%22%3E64x64%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" alt="Generic placeholder image">
                        </div>
                        <div class="media-body">
                            <p>Ngon quá!.</p>
                            <small class="text-muted">Đăng bởi GaNgon vào ngày 3/1/18</small>
                        </div>
                    </div>
                    <hr>


                    <a href="#" class="btn hvr-hover">Để lại đánh giá</a>
                </div>
            </div>
        </div>

        <!-- SanPhamNoiBat -->
        @Html.Partial("_SanPhamNoiBat")
        <!-- End SanPhamNoiBat -->
    </div>
</div>
<!-- End Cart -->

<script type="text/javascript">

    function AddToCart(checkHD, maHDB, maMonAn, maKH) {
        var soLuong = document.getElementById("SoLuong");
        var valueSoLuong = parseInt(soLuong.value);

        const currentUrl = window.location.href;

        if (checkHD == "1") {
            const data = {
                SoLuong: valueSoLuong,
                MaMonAn: maMonAn,
                MaHoaDon: maHDB
            };

            //window.location.replace("https://localhost:7067/TaiKhoan/DangNhap");
            fetch('https://localhost:7067/api/GioHangAPI/invoiceDetailExsits', {
                method: 'POST',
                body: JSON.stringify(data),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        // Nếu đăng kí thành công, chuyển hướng đến trang "Thank you"
                        alert("Thêm giỏ hàng thành công")
                    } else {
                        //Trường hợp đã có sản phẩm trong giỏ hàng
                        fetch('https://localhost:7067/api/GioHangAPI/' + maHDB + '/' + maMonAn + '/' + soLuong.value, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                        })
                            .then(response => {
                                alert("Thêm giỏ hàng thành công");
                                console.log(response);
                                // Xử lý dữ liệu trả về nếu có
                            })
                            .catch(error => {
                                console.log(error);
                            });

                    }
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                });
        }
        if (checkHD == "0") {
            const data = {
                MaHDB: maHDB,
                NgayTao: "2022-04-07T10:20:30",
                TongTien: 0,
                TrangThaiThanhToan: "Chưa thanh toán",
                DiaChiGiaoHang: "",
                SoDienThoai: "",
                NguoiNhan: "",
                GhiChu: "",
                TinhTrangDonHang: "Thêm giỏ hàng",
                MaVoucher: "",
                IDKhachHang: maKH,
                MaNhanVien: "NV00",
                MaMonAn: maMonAn,
                SoLuong: valueSoLuong
            };

            //window.location.replace("https://localhost:7067/TaiKhoan/DangNhap");
            fetch('https://localhost:7067/api/GioHangAPI/invoiceDetail', {
                method: 'POST',
                body: JSON.stringify(data),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        // Nếu đăng kí thành công, chuyển hướng đến trang "Thank you"
                        alert("Thêm giỏ hàng thành công");
                        window.location.href = currentUrl;
                    } else {
                        alert('Món ăn này đã có trong giỏ hàng');
                    }
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                });
        }
    }
</script>
