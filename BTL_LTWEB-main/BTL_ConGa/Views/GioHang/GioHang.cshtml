                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },

            })
                .then(response => response.json())
                .then(data => {
                    //getProduct('@Model.MaHoaDon', '@ViewBag.taiKhoan');
                })
                .catch(error => {
