                })
                    .then(response => {
                        if (response.ok) {
                            response.json().then(data => {
                                alert("ap dungvoucher thanh cong")
                                //phanTramVoucher=data.phanTram;
                                getProduct(maHDB, '@ViewBag.taiKhoan');
                            });
                        } else {
                            response.json().then(data => {
                                alert("Voucher không hợp lệ")
                                phanTramVoucher = 1;

                            });
                        }
                    })
                    .catch(error => {
                        alert("Voucher không hợp lệ")
                        phanTramVoucher = 1;
                    });
            }
            else {
