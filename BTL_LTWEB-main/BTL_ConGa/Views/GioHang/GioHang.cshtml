                    $('#giamGia').html(formatCurrency(giamGia))
                    updateMoney(maHoaDon, total);
                    $('#tien2').html(strMoney2);
                    $('#allProduct').html(str);
                }
            });
        }
        //Xử lý khi người dùng tăng giảm số lượng
