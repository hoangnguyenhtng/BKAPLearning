@inject IHttpContextAccessor HttpContextAccessor

<header class="main-header">
    <!-- Start Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
        <div class="container">
            <!-- Start Header Navigation -->
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-controller="TrangChu" asp-action="TrangChu"><img src="../Chicken/images/Logo/logoChicken.png" class="logo" alt=""></a>
            </div>
            <!-- End Header Navigation -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-menu">
                <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                    <li class="nav-item"><a class="nav-link" asp-controller="TrangChu" asp-action="TrangChu">Trang chủ</a></li>
                    <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Thực đơn</a>
                        @await Component.InvokeAsync("BTL_ConGa.ViewComponents.DanhMucMenu", new{})
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="KhuyenMai" asp-action="KhuyenMai">Khuyến mại</a></li>
                    <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Thông tin</a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="ThongTin" asp-action="GioiThieu">Giới thiệu</a></li>
                            <li><a asp-controller="ThongTin" asp-action="LienHe">Liên hệ</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="BaiViet" asp-action="BaiViet">Bài viết</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- Start Atribute Navigation -->
            <div class="attr-nav">
                <ul>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                    {
                        <li class="side-menu">
                           <a id="Gio-Hang" asp-controller="GioHang" asp-action="GioHang">
                               <i class="fa fa-shopping-bag"></i>

                               <p>Giỏ hàng</p>
                        </a>
                        </li>
                    }
                    else
                    {
                        <li class="side-menu">
                            <a id="Gio-Hang" asp-controller="TaiKhoan" asp-action="DangNhap">
                                <i class="fa fa-shopping-bag"></i>

                                <p>Giỏ hàng</p>
                            </a>
                        </li>
                    }

                    
                </ul>
            </div>
            <!-- End Atribute Navigation -->
        </div>
        <!-- Start Side Menu -->
        <div class="side">
            <a href="#" class="close-side"><i class="fa fa-times"></i></a>
            <li class="cart-box">
                <ul class="cart-list">
                    <li>
                        <a href="#" class="photo"><img src="../Chicken/images/img-pro-01.jpg" class="cart-thumb" alt="" /></a>
                        <h6><a href="#">Delica omtantur </a></h6>
                        <p>1x - <span class="price">$80.00</span></p>
                    </li>
                    <li>
                        <a href="#" class="photo"><img src="../Chicken/images/img-pro-02.jpg" class="cart-thumb" alt="" /></a>
                        <h6><a href="#">Omnes ocurreret</a></h6>
                        <p>1x - <span class="price">$60.00</span></p>
                    </li>
                    <li>
                        <a href="#" class="photo"><img src="../Chicken/images/img-pro-03.jpg" class="cart-thumb" alt="" /></a>
                        <h6><a href="#">Agam facilisis</a></h6>
                        <p>1x - <span class="price">$40.00</span></p>
                    </li>
                    <li class="total">
                        <a href="#" class="btn btn-default hvr-hover btn-cart">VIEW CART</a>
                        <span class="float-right"><strong>Total</strong>: $180.00</span>
                    </li>
                </ul>
            </li>
        </div>
        <!-- End Side Menu -->
    </nav>
    <!-- End Navigation -->
</header>